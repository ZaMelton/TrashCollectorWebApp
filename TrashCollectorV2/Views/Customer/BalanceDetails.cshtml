@model TrashCollectorV2.Models.Account

@{
    ViewData["Title"] = "BalanceDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Balance Details</h1>
<hr />
<div>
    <hr />
    <form asp-action="Charge" method="POST" asp-route-accountId="@Model.Id">
        <article>
            <label>Balance: $@Model.Balance.00</label>
        </article>
        <script src="//checkout.stripe.com/v3/checkout.js"
                class="stripe-button"
                data-key="@ViewBag.StripePublishKey"
                data-locale="auto"
                data-description="Trash Collector Bill"
                data-amount="@(Model.Balance * 100)">
        </script>
    </form>
</div>
<br />
<div>
    <a class="btn btn-outline-primary" asp-action="Index">Home</a>
</div>



