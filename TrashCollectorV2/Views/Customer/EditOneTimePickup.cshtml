@model TrashCollectorV2.Models.Account

@{
    ViewData["Title"] = "EditOneTimePickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit One Time Pickup</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOneTimePickup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OneTimePickup" class="control-label"></label>
                <input asp-for="OneTimePickup" class="form-control" type="date"/>
                <span asp-validation-for="OneTimePickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
